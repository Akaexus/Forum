<!DOCTYPE html>
<html lang="pl" dir="ltr">
<head>
    <meta charset="utf-8">
    {if $title}
    <title>{$title} - Forum</title>
    {/if}
    {foreach $cssFiles as $cssFile}
        <link rel="stylesheet" href="{$cssFile}">
    {/foreach}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
{if $header}
{$header|noescape}
{/if}
<div id="wrapper">
    <header class="main-header">
        <div class="branding">
            <div class="main_width">
                <a href="/" id="logo">
                    <img class="home" src="assets/img/logo.png">
                </a>

                <div class="userbar">
                    {if $user}
                        <a href="{User::loggedIn()->url()}">
                            {$user->name|noescape}
                        </a> &nbsp;
                        <a href="?controller=logout">Wyloguj</a>
                    {else}
                        <a href="?controller=login">Zaloguj</a>
                    {/if}
                </div>
            </div>
        </div>
        {if $breadcrumb}
        <div class="breadcrumb">
            <div class="main_width">
                <ul>
                    {foreach $breadcrumb as $page}
                    <li>
                        <a href="{$page['url']}">
                            {if $page['url'] == '/'}
                                <i class="fas fa-home"></i>
                            {else}
                                <i class="fas fa-chevron-right"></i>
                            {/if}
                            {$page['name']}
                        </a>
                    </li>
                    {/foreach}
                </ul>
                <a href="?controller=announcements">Ogłoszenia</a>
                <a href="?controller=members&do=list">Użytkownicy</a>
                <a href="?controller=follows">Tablica</a>
                <div class="search_bar">
                    <input type="text">
                </div>
            </div>
        </div>
        {/if}
    </header>
    <main>
        <div class="content">
            {$output|noescape}
        </div>
    </main>
</div>
{if $footer}
{$footer|noescape}
{/if}
{foreach $jsFiles as $jsFile}
<script src="{$jsFile}" charset="utf-8"></script>
{/foreach}
</body>
</html>